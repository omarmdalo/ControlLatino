{% extends "ModeloBundle::layout.html.twig" %}
{% block content %}
    
    <div class="row">
        <!-- Page Header -->
        <div class="col-lg-12">
            <h1 class="page-header">Detalle Asociado</h1>
        </div>
        <!--End Page Header -->
    </div>
    
    <div class="row">
                <!-- Welcome -->
        <div class="col-lg-12">
            <a href="{{path("asociados")}}">
                    <button type="button" class="btn btn-success">Asociados</button> 
            </a>
            <a href="{{path("asociado_update",{"id":asociado.id})}}">
                    <button type="button" class="btn btn-warning">Editar</button> 
            </a>
            <a href="{{path("asociado_delete",{"id":asociado.id})}}">
                    <button type="button" class="btn btn-danger">Eliminar</button>
            </a>
            <a href="#">
                    <button type="button" class="btn btn-info">Imprimir</button>
            </a>            
            <hr/>
        </div>
                <!--end  Welcome -->
    </div>    
    <div class="row">
        <div class="col-lg-12">
            <!--Area chart example -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bar-chart-o fa-fw"></i>Datos del Asociado                    
                </div>
                <div class="panel-body"> 
                    <ul class="list-group">
                        <li class="list-group-item">
                            <img width="200" src="{{ asset("uploads/"~asociado.imagen) }}"
                        </li>
                        <li class="list-group-item">
                            <span class="input-group-addon">Nombres</span>                     
                            <input type="text" class="form-control" value="{{asociado.nombres}}" disabled>
                        </li>
                        <li class="list-group-item">
                            <span class="input-group-addon">Apellidos</span>
                            <input type="text" class="form-control" value="{{asociado.apellidos}}" disabled>
                        </li>
                        <li class="list-group-item">
                            <span class="input-group-addon">Cedula</span>
                            <input type="text" class="form-control" value="{{asociado.cedula}}" disabled>
                        </li>
                        <li class="list-group-item">
                            <span class="input-group-addon">Numero de asociado</span>
                            <input type="text" class="form-control" value="{{asociado.numasociado}}" disabled>
                        </li>
                        <li class="list-group-item">
                            <span class="input-group-addon">Codigo barra</span>
                        <input type="text" class="form-control" value="{{asociado.codigo}}" disabled>
                        </li>
                        <li class="list-group-item">
                            <span class="input-group-addon">Estado de Ingreso</span>
                            {% if asociado.solvente %}
                                    <input type="text" class="form-control" value="Permitido" disabled>
                            {% else %}
                                    <input type="text" class="form-control" value="Suspendido" disabled>
                            {% endif %} 
                        </li>
                        <li class="list-group-item">
                            <span class="input-group-addon">Accion Socio</span>
                            <input type="text" class="form-control" value="{{asociado.idsocio.accion}}" disabled>
                        </li>
                    </ul>                  
                </div>
            </div>
            <!--End area chart example -->
        </div>
    </div>
    
    <div class="clearfix"></div>    
{% endblock %}