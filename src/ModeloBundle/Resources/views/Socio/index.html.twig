{% extends "ModeloBundle::layout.html.twig" %}
{% block content %}      
    <div class="row">
        <!-- Page Header -->
        <div class="col-lg-12">
            <h1 class="page-header">Listado de Socios</h1>
        </div>
        <!--End Page Header -->
    </div>
    
    <div class="row">
                <!-- Welcome -->
        <div class="col-lg-12">
            <a href="{{path("socio_add")}}" class="btn btn-success btn-lg">
                <span class="glyphicon glyphicon-plus"></span> 
            </a>
            <a href="#" class="btn btn-success btn-lg">
                <span class="glyphicon glyphicon-print"></span> Print 
            </a>
            <hr/>   
        </div>
                <!--end  Welcome -->
    </div>
    
    
    
    <div class="row">
        <div class="col-lg-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                     Socios
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Nombres</th>
                                    <th>Apellidos</th>
                                    <th>Cedula</th>
                                    <th>Tipo</th>
                                    <th>Codigo</th>
                                    <th>Accion</th>
                                    <th>Ingreso</th>
                                    <th>Detalle</th>
                                    <th>Editar</th>
                                    <th>Eliminar</th> 
                                </tr>
                            </thead>
                            <tbody>
                                {% for socio in socios %}
                                <tr>
                                    <td>{{ socio.nombres }} </td>
                                    <td>{{ socio.apellidos }} </td>
                                    <td>{{ socio.cedula }} </td>
                                    <td>{{ socio.idtiposocio.nombre }} </td>
                                    <td>{{ socio.codigo }} </td>
                                    <td>{{ socio.accion }} </td>
                                    <td>
                                        {% if socio.solvente %}
                                                <button type="button" class="btn btn-success disabled">Permitido</button>
                                        {% else %}
                                                <button type="button" class="btn btn-danger disabled">Suspendido</button>
                                        {% endif %}                                    
                                    </td>
                                    <td> 
                                        <a href="{{path("socio_detail",{"id":socio.id})}}">
                                            <button type="button" class="btn btn-info">Ver</button> 
                                        </a>
                                    </td>
                                    <td> 
                                        <a href="{{path("socio_update",{"id":socio.id})}}">
                                            <button type="button" class="btn btn-primary">Editar</button> 
                                        </a>
                                    </td>
                                    <td>
                                         <a href="{{path("socio_delete",{"id":socio.id})}}">
                                            <button type="button" class="btn btn-danger">Eliminar</button>
                                        </a>  

                                    </td>
                                </tr>
                                {% endfor %}                                
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
    <div class="clearfix"></div>
    
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
{% endblock %}