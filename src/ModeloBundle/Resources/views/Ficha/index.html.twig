{% extends "ModeloBundle::layout.html.twig" %}
{% block content %}
    <div class="col-lg-6">
        <h2> Asociados </h2>
        <hr/>
        <a href="{{path("ficha_add")}}" class="btn btn-success btn-lg">
            <span class="glyphicon glyphicon-plus"></span> 
        </a>
        <a href="#" class="btn btn-success btn-lg">
            <span class="glyphicon glyphicon-print"></span> Print 
        </a>
        <hr/>
        {% for message in app.session.flashbag().get('status') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}  
        
        <table class="table table-striped">
            <tr>
                <th>Motivo</th>
                <th>fecha</th>
                <th>Accion</th>           
                <th>Editar</th>
                <th>Eliminar</th>                   
            </tr>    
        {% for ficha in fichas %}
            <tr>
                <td>{{ ficha.motivo }} </td>
                <td>{{ ficha.fecha | date('Y-m-d') }} </td>
                <td>{{ ficha.idsocio.accion }} </td>             
                <td> 
                    <a href="{{path("ficha_update",{"id":ficha.id})}}" class="btn btn-success btn-sm">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                </td>
                <td>
                     <a href="{{path("ficha_delete",{"id":ficha.id})}}" class="btn btn-danger btn-sm">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>  

                </td>
            </tr>
        {% endfor %}      
        </table>
        
        <ul class="pagination">
            <li href="#">&laquo;</li>
            {% for i in 1..pagesCount %}
            <li><a href="{{path('fichas',{"page":i})}}">{{i}}</a></li>
            {% endfor %}
            <li href="#">&raquo;</li>
        </ul>
    </div>
    <div class="clearfix"></div>    
{% endblock %}