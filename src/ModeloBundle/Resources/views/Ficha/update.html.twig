{% extends "ModeloBundle::layout.html.twig" %}
{% block content %}
    
    <div class="row">
        <!-- Page Header -->
        <div class="col-lg-12">
            <h1 class="page-header"></h1>
        </div>
        <!--End Page Header -->
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            <!--Area chart example -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bar-chart-o fa-fw"></i>Editar ficha: {{ ficha.motivo }}                   
                </div>

                <div class="panel-body">   
                    {{form_start(form,{ 'enctype':'multipart/form-data' })}}
                    {{form_widget(form.motivo)}}
                    {{form_widget(form.idsocio)}}
                    {{form_widget(form.invitados,{'value':invitados|trim("/")})}}
                    {{form_widget(form.fecha)}}
                    {{form_widget(form.guardar)}}                                       
                    {{form_end(form)}}
                </div>
            </div>
            <!--End area chart example -->
        </div>
    </div>
    
    <div class="clearfix"></div>    
{% endblock %}
