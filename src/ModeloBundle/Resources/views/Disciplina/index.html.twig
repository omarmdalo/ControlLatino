{% extends "ModeloBundle::layout.html.twig" %}
{% block content %}

    <div class="row">
        <!-- Page Header -->
        <div class="col-lg-12">
            <h1 class="page-header"></h1>
        </div>
        <!--End Page Header -->
    </div>

    <div class="row">
        <!-- Welcome -->
        <div class="col-lg-12">

            <a href="{{path("disciplina_add")}}" class="btn btn-success">
                <span class="fa fa-plus"></span> 
            </a>
            <a href="#" class="btn btn-success">
                <span class="fa fa-print"></span> 
            </a>
            <hr/>
            {% for message in app.session.flashbag().get('status') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %} 
        </div>
        <!--end  Welcome -->
    </div>



    <div class="row">
        <div class="col-lg-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Listado de Disciplinas
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Descripcion</th>
                                    <th>Lugar</th>                                    
                                    <th>Editar</th>
                                    <th>Eliminar</th> 
                                </tr>
                            </thead>
                            <tbody>
                                {% for disciplina in disciplinas %}
                                    <tr>
                                        <td>{{ disciplina.nombre }} </td>
                                        <td>{{ disciplina.descripcion }} </td>
                                        <td>{{ disciplina.lugar }} </td>                                    
                                        <td> 
                                            <a href="{{path("disciplina_update",{"id":disciplina.id})}}">
                                                <button type="button" class="btn btn-primary">Editar</button> 
                                            </a>
                                        </td>
                                        <td>
                                            <a href="{{path("disciplina_delete",{"id":disciplina.id})}}">
                                                <button type="button" class="btn btn-danger">Eliminar</button>
                                            </a>  
                                        </td>
                                    </tr>
                                {% endfor %}                                
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
    <div class="clearfix"></div>

{% endblock %}