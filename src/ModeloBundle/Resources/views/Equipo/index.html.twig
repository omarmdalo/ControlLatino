{% extends "ModeloBundle::layout.html.twig" %}
{% block content %}
     
    <div class="row">
        <!-- Page Header -->
        <div class="col-lg-12">
            <h1 class="page-header"></h1>
        </div>
        <!--End Page Header -->
    </div>
    
    <div class="row">
                <!-- Welcome -->
        <div class="col-lg-12">
            <a href="{{path("campeonato_add")}}" class="btn btn-success btn-lg">
                <span class="glyphicon glyphicon-plus"></span> 
            </a>
            <a href="#" class="btn btn-success btn-lg">
                <span class="glyphicon glyphicon-print"></span> Print 
            </a>
            <hr/>
            {% for message in app.session.flashbag().get('status') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %} 
        </div>
                <!--end  Welcome -->
    </div>
    
    
    
    <div class="row">
        <div class="col-lg-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                     Listado de Equipos
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Descripcion</th>
                                    <th>Campeonato</th>
                                    <th>Disciplina</th>
                                    <th>Jugadores</th>
                                    <th>Detalle</th>                              
                                    <th>Editar</th>
                                    <th>Eliminar</th> 
                                </tr>
                            </thead>
                            <tbody>
                                {% for equipo in equipos %}
                                <tr>
                                    <td>{{ equipo.nombre }} </td>
                                    <td>{{ equipo.descripcion }} </td>
                                    <td>{{ equipo.idcampeonato.nombre }} </td>
                                    <td>{{ equipo.idcampeonato.iddisciplina.nombre }} </td>
                                    <td> 
                                        <a href="#">
                                            <button type="button" class="btn btn-info">Cargar</button> 
                                        </a>
                                    </td>
                                    <td> 
                                        <a href="{{path("equipo_detail",{"id":equipo.id})}}">
                                            <button type="button" class="btn btn-info">Detalle</button> 
                                        </a>
                                    </td>
                                    <td> 
                                        <a href="{{path("equipo_update",{"id":equipo.id})}}">
                                            <button type="button" class="btn btn-primary">Editar</button> 
                                        </a>
                                    </td>
                                    <td>
                                         <a href="{{path("equipo_delete",{"id":equipo.id})}}">
                                            <button type="button" class="btn btn-danger">Eliminar</button>
                                        </a>  
                                    </td>
                                </tr>
                                {% endfor %}                                
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
    <div class="clearfix"></div>
    
{% endblock %}