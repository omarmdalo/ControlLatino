{% extends "ModeloBundle::layout.html.twig" %}
{% block content %}

    <!-- Cabecera -->
    <div class="row">       
        <div class="col-lg-12">
            <h1 class="page-header"></h1>
        </div>
    </div>

    <!-- Opciones ficha de Socio -->    
    <div class="row">                
        <div class="col-lg-12">
            <a href="{{path("empleados")}}">
                <button type="button" class="btn btn-success">Empleados</button> 
            </a>
            <a href="{{path("empleado_update",{"id":empleado.id})}}">
                <button type="button" class="btn btn-warning">Editar</button> 
            </a>
            <a href="{{path("empleado_delete",{"id":empleado.id})}}">
                <button type="button" class="btn btn-danger">Eliminar</button>
            </a>
            <a href="#">
                <button type="button" class="btn btn-info">Imprimir</button>
            </a>            
            <hr/>
        </div>                
    </div>

    <!-- Ficha de Asociados Acordeon -->                    
    <div class="row">
        <div class="col-lg-12">
            <!--Collapsible Accordion Panel Group   -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Ficha Empleado
                </div>
                <div class="panel-body">
                    <!-- Inicio Grupo Panel --> 
                    <div class="panel-group" id="accordion">
                        
                        <!-- Panel Datos Asociado   -->
                        <div class="panel panel-default">
                            
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Datos del Empleado</a>
                                </h4>
                            </div>
                            
                            <div id="collapseOne" class="panel-collapse collapse in">
                                <div class="panel-body">

                                    <div class="row">
                                        
                                        <div class="col-lg-12">
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <img width="100" src="{{ asset("uploads/empleado/"~empleado.imagen) }}">
                                                </li>
                                            </ul>
                                        </div>
                                        
                                        <div class="col-lg-6">
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <span class="input-group-addon">Nombres</span>                     
                                                    <input type="text" class="form-control" value="{{empleado.nombres}}" disabled>
                                                </li>
                                                <li class="list-group-item">
                                                    <span class="input-group-addon">Apellidos</span>
                                                    <input type="text" class="form-control" value="{{empleado.apellidos}}" disabled>
                                                </li>                       
                                                <li class="list-group-item">
                                                    <span class="input-group-addon">Cedula</span>
                                                    <input type="text" class="form-control" value="{{empleado.cedula}}" disabled>
                                                </li> 
                                            </ul>
                                        </div>  
                                                
                                        <div class="col-lg-6">                          
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <span class="input-group-addon">Fecha Nacimiento</span>
                                                    <input type="text" class="form-control" value="{{empleado.nacimiento | date('d-m-Y')}}" disabled>
                                                </li>
                                                <li class="list-group-item">
                                                    <span class="input-group-addon">Edad</span>
                                                    <input type="text" class="form-control" value="{{empleado.edad}}" disabled>
                                                </li>
                                            </ul>
                                        </div>  
                                                
                                    </div>
                                </div>
                            </div>
                        </div>                        
                        <!-- Fin Panel Datos Asociado   -->
                        
                        
                        <!-- Panel Registro   -->
                        <div class="panel panel-default">
                            
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">Datos Laborales</a>
                                </h4>
                            </div>
                            
                            <div id="collapseTwo" class="panel-collapse collapse">
                                <div class="panel-body">

                                    <div class="row">
                                                                               
                                        <div class="col-lg-6">
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <span class="input-group-addon">Fecha registro</span>                     
                                                    <input type="text" class="form-control" value="{{empleado.registro | date('d-m-Y')}}" disabled>
                                                </li>
                                                <li class="list-group-item">
                                                    <span class="input-group-addon">Fecha Actualizacion</span>
                                                    <input type="text" class="form-control" value="{{empleado.actualizacion | date('d-m-Y')}}" disabled>
                                                </li>                       
                                            </ul>
                                        </div>  
                                                
                                        <div class="col-lg-6">                          
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <span class="input-group-addon">Departamento</span>
                                                    <input type="text" class="form-control" value="{{empleado.iddepartamento.nombre}}" disabled>
                                                </li>
                                                <li class="list-group-item">
                                                    <span class="input-group-addon">Cargo</span>
                                                    <input type="text" class="form-control" value="{{empleado.idcargo.nombre}}" disabled>
                                                </li>
                                            </ul>
                                        </div>  
                                                
                                    </div>
                                </div>
                            </div>
                        </div>                        
                        <!-- Fin Panel Datos Asociado   -->                        

                        <!-- Panel Carnet   -->                     
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseFour">Carnet</a>
                                </h4>
                            </div>
                            <div id="collapseFour" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <div class="panel-body">

                                        <div class="row">
                                            <div class="col-lg-6">
                                                <ul class="list-group">
                                                    <li class="list-group-item">
                                                        <span class="input-group-addon">Fecha emision</span>
                                                        {% if empleado.emision == null %}
                                                            <input type="text" class="form-control" value="No Emitido" disabled>
                                                        {% else %}
                                                            <input type="text" class="form-control" value="{{empleado.emision | date('d-m-Y')}}" disabled>
                                                        {% endif %}   
                                                    </li>
                                                    <li class="list-group-item">
                                                        <span class="input-group-addon">Fecha vencimiento</span>
                                                        {% if empleado.emision == null %}
                                                        <input type="text" class="form-control" value="No Emitido" disabled>    
                                                        {% else %}
                                                        <input type="text" class="form-control" value="{{empleado.vencimiento | date('d-m-Y')}}" disabled>
                                                        {% endif %}
                                                    </li>
                                                </ul>
                                            </div>    
                                            <div class="col-lg-6">                          
                                                <ul class="list-group">
                                                    <li class="list-group-item">
                                                        <span class="input-group-addon">Codigo Nuevo</span>
                                                        <input type="text" class="form-control" value="{{empleado.codigo}}" disabled>
                                                    </li>
                                                    {% if empleado.old != null %}
                                                    <li class="list-group-item">
                                                        <span class="input-group-addon">Codigo Anterior</span>
                                                        <input type="text" class="form-control" value="{{empleado.old}}" disabled>
                                                    </li>
                                                    {% endif %}
                                                    <li class="list-group-item">
                                                        <span class="input-group-addon">Ingreso</span>                                                                            
                                                        {% if empleado.estado %}
                                                            <input type="text" class="form-control" value="Permitido" disabled>
                                                        {% else %}
                                                            <input type="text" class="form-control" value="Suspendido" disabled>
                                                        {% endif %} 
                                                    </li>    
                                                </ul>
                                            </div>
                                        </div>              
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Fin Panel Datos Juridicos   -->                       
                                               
                                                             
                    </div>
                    <!--Fin Grupo Panel -->                              
                </div>                        
            </div>
        </div>
    </div>
                                            






    <div class="clearfix"></div>    
{% endblock %}