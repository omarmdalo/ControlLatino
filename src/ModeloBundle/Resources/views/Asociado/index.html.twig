{% extends "ModeloBundle::layout.html.twig" %}
{% block content %}
     
    <div class="row">
        <!-- Page Header -->
        <div class="col-lg-12">
            <h1 class="page-header">Listado de Asociados</h1>
        </div>
        <!--End Page Header -->
    </div>
    
    <div class="row">
                <!-- Welcome -->
        <div class="col-lg-12">
            <a href="{{path("asociado_add")}}" class="btn btn-success btn-lg">
                <span class="glyphicon glyphicon-plus"></span> 
            </a>
            <a href="#" class="btn btn-success btn-lg">
                <span class="glyphicon glyphicon-print"></span> Print 
            </a>
            <hr/>
            {% for message in app.session.flashbag().get('status') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %} 
        </div>
                <!--end  Welcome -->
    </div>
    
    
    
    <div class="row">
        <div class="col-lg-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                     Socios
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Nombres</th>
                                    <th>Apellidos</th>
                                    <th>Cedula</th>
                                    <th>Codigo</th>
                                    <th>Accion</th>
                                    <th>Ingreso</th>
                                    <th>Detalle</th>
                                    <th>Editar</th>
                                    <th>Eliminar</th> 
                                </tr>
                            </thead>
                            <tbody>
                                {% for asociado in asociados %}
                                <tr>
                                    <td>{{ asociado.nombres }} </td>
                                    <td>{{ asociado.apellidos }} </td>
                                    <td>{{ asociado.cedula }} </td>
                                    <td>{{ asociado.codigo }} </td>
                                    <td>{{ asociado.idsocio.accion }} </td>
                                    <td>
                                        {% if asociado.solvente %}
                                                <button type="button" class="btn btn-success disabled">Permitido</button>
                                        {% else %}
                                                <button type="button" class="btn btn-danger disabled">Suspendido</button>
                                        {% endif %}                                    
                                    </td>
                                    <td> 
                                        <a href="{{path("asociado_detail",{"id":asociado.id})}}">
                                            <button type="button" class="btn btn-info">Ver</button> 
                                        </a>
                                    </td>
                                    <td> 
                                        <a href="{{path("asociado_update",{"id":asociado.id})}}">
                                            <button type="button" class="btn btn-primary">Editar</button> 
                                        </a>
                                    </td>
                                    <td>
                                         <a href="{{path("asociado_delete",{"id":asociado.id})}}">
                                            <button type="button" class="btn btn-danger">Eliminar</button>
                                        </a>  

                                    </td>
                                </tr>
                                {% endfor %}                                
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
    <div class="clearfix"></div>
    
{% endblock %}